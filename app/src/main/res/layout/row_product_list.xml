<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvProductDetail"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="11dp"
            app:cardCornerRadius="8dp"
            android:layout_marginHorizontal="4dp"
            app:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivProduct"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:src="@drawable/app_icon5"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_toEndOf="@id/ivProduct"
                    android:fontFamily="@font/second_bold"
                    android:text="Toy set (4 Toys)"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvRs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/ivProduct"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/first_regular"
                    android:text="Rs. "
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/colorSecondary"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/tvRs"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/first_regular"
                    android:text="200"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/colorSecondary"
                    android:textSize="17sp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>